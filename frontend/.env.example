# ===========================================
# Co-Op Frontend Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
#
# REQUIRED variables are marked with [REQUIRED]
# All NEXT_PUBLIC_ variables are exposed to the browser

# ===========================================
# App Configuration
# ===========================================
# App URL (for OAuth callbacks, metadata, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Supabase Configuration [REQUIRED]
# Get from: https://supabase.com/dashboard/project/[PROJECT]/settings/api
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# ===========================================
# API Configuration [REQUIRED]
# Backend URL - adjust for your environment
# ===========================================

# Development (local backend)
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# Production (uncomment and update for deployment)
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com/api/v1
